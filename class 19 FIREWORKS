import turtle
import random

wn = turtle.Screen()
wn.setup(width=600, height=600)
wn.bgcolor("black")
wn.tracer(0) # Turns off screen updates for smoother animation

pen = turtle.Turtle()
pen.speed(0)
pen.penup()
pen.hideturtle()


def draw_firework(x, y, color):
        pen.goto(x, y)
        pen.pendown()
        pen.pencolor(color)
        pen.pensize(2)
        for _ in range(36): # Draw 36 lines to create a burst effect
            pen.forward(random.randint(20, 50))
            pen.backward(random.randint(20, 50))
            pen.right(10) # Rotate 10 degrees for each line
        pen.penup()


def create_firework():
        x = random.randint(-250, 250)
        y = random.randint(-250, 250)
        colors = ["red", "orange", "yellow", "green", "blue", "purple", "white"]
        color = random.choice(colors)
        draw_firework(x, y, color)
        wn.update() # Update the screen to show the new firework

wn.listen() # Start listening for keyboard events
wn.onkey(create_firework, "space") # Call create_firework when spacebar is pressed


wn.mainloop()
